<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  EDIT QUESTION   "
        android:layout_marginTop="100dp"
        android:background="@drawable/mybutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:id="@+id/question_set"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  OPEN STUDENT DATABASE  "
        android:background="@drawable/mybutton"
        android:layout_below="@id/question_set"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:id="@+id/student_database"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  START QUIZ   "
        android:background="@drawable/mybutton"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/student_database"
        android:id="@+id/quiz_start"/>

</RelativeLayout>