<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".SelectSubjectActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Subject"
        android:textSize="20sp"
        android:id="@+id/text_t"
        android:textColor="@android:color/black"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/text_t"
        android:layout_marginTop="100dp"
        android:id="@+id/spinner_sub"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Quiz"
        android:textSize="20sp"
        android:id="@+id/text_t2"
        android:layout_marginTop="40dp"
        android:layout_below="@id/spinner_sub"
        android:textColor="@android:color/black"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/text_t2"
        android:layout_marginTop="100dp"
        android:id="@+id/spinner_1"/>

</RelativeLayout>